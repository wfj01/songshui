/* pages/goupiao/goupiao/index.wxss */
page {
  background: #FFF;
}

.box {
  background: #FFF;
  width: 100%;
  height: 100%;
}

.list {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}

.list_one {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3rpx 12rpx 0px rgba(113, 113, 113, 0.26);
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.img {
  width: 200rpx;
  height: 220rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx 8rpx 0 0;
  overflow: hidden;
}

.textbox {
  width:300rpx;
  height: 100%;
  display: flex;
  align-items: center;
  margin: 0 auto;
  flex-direction: column;
}

.textbox view {
  display: block;
  width: 100%;
  flex: 1;
  line-height: 50rpx;

}

.pre {
  width: 68rpx;
  height: 22rpx;
  font-size: 27rpx;
  font-weight: normal;
  color: rgba(43, 43, 42, 1);
  line-height: 56rpx;
}

.mybtn {
  width: 100rpx;
  height: 60rpx;
  background: #26c68a;
  box-shadow: 0px 3rpx 7rpx 0px rgba(113, 113, 113, 0.16);
  border-radius: 35rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 27rpx;
  font-weight: normal;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  margin-bottom: 30rpx;
}

.lname {
  height: 50rpx;
  font-size: 29rpx;
  font-weight: normal;
  color: rgba(43, 43, 42, 1);
  line-height: 50rpx;
  font-weight:900 ;
  font-size: 35rpx;
  margin-top: 20rpx;
}

.lzengsong {
  height: 50rpx;
  font-size: 27rpx;
  font-weight: normal;
  color: rgba(125, 125, 125, 1);
  line-height: 50rpx;
  width: 300rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.lpie {
  height: 70rpx;
  font-size: 27rpx;
  font-weight: normal;
  color: rgba(43, 43, 42, 1);
  line-height: 50rpx;
  color: rgb(255, 0, 0)
}

.imagestyle {
  width: 100%;
  height: 100%;
}