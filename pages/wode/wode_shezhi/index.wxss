/* pages/wode/wode_shezhi/index.wxss */
.gerenxinxi{
  padding: 30rpx;
  background: #fff;
  width: 690rpx;
  margin: 0 auto;
  box-sizing: border-box;
  border-radius: 16rpx;
  position: relative;
  top: -100rpx;
  box-shadow: 0rpx 8rpx 10rpx 0rpx#eee;
}

.onetext{
  padding:10rpx;
  margin-left:10rpx ;
  margin-bottom: 10rpx;
}

.lefttext{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding:10rpx;
  margin-left:10rpx ;
  margin-bottom: 10rpx;
  color: #666;
}

.rightview {
  position: absolute;
  top: calc(-50% + 20rpx);
  left: calc(50% - 76rpx);
  width: 152rpx;
  height: 152rpx;
  background: rgba(255, 238, 237, 1);
  border: 6rpx solid rgba(255, 255, 255, 1);
  box-shadow: 0rpx 8rpx 10rpx 0rpx rgb(34,137,123);
  border-radius: 50%;
  box-sizing: border-box;
  overflow: hidden;
}

.hr {
  width: 98%;
  margin: auto;
  text-align: center;
height: 1rpx;
background: #eee;
}

.middleview{
  display: flex;
  justify-content: space-between;
}

.chongxinshouquan{
  display: block;
  width: 600rpx;
  height: 80rpx;
  background:#26c68a;
  border-radius: 60rpx;

  font-family: inpinheiti;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  text-align: center;
  margin-right: 30rpx;

  font-size: 32rpx;
  margin:0 auto;
 
}

.genghuanshouji{
  display: block;
  width: 40%;
  height: 100rpx;
  background: rgb(255, 255, 255);
  border-radius: 60rpx;
  font-size: 40rpx;
  font-family: inpinheiti;
  font-weight: 400;
  color: rgb(0, 0, 0);
  line-height: 90rpx;
  text-align: center;
  margin-right: 30rpx;
  margin-top: 20rpx;
}


.touxiang{
  height: 160rpx;
  width: 160rpx;
  margin-right: 30rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 8rpx solid #fff;
  box-sizing: border-box;
  border: 6rpx solid rgba(255, 255, 255, 1);
  box-shadow: 0rpx 8rpx 10rpx 0rpx rgb(34,137,123);
  border-radius: 50%;
  margin-left: 30rpx;
  margin:0 auto;
  margin-top:100rpx;
  margin-bottom: 50rpx;
}
.touxiang image{
  width: 100%;
  height: 100%;
}

