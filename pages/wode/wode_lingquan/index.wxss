.listview {
  width: 712rpx;
  height: 210rpx;
  display: flex;
  margin: 0 auto;
  margin-top: 70rpx;
  box-shadow:0 2rpx 5rpx 1rpx #eee;
}

.leftview {
  width: 28%;
  height: 100%;
  background:linear-gradient(0deg,rgba(251,152,113,1),rgba(253,130,114,1));
  display: block;
  position: relative;
  border-radius: 8rpx 0 0 8rpx;
}
.top{
  height: 50rpx;
  line-height: 50rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.leftview text {
  display: block;
  text-align: center;
  width: 100%;
  height: 130rpx;
  font-size: 50rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 130rpx;
}
.leftview  .youhuizi{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 34rpx;
}

.rightview {
  width: 72%;
  height: 100%;
  background-color: rgb(255, 255, 255);
  display: block;
  border-radius: 0 8rpx 8rpx 0;
}

.middletextview2 {
  padding: 30rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: flex-end;
}

.middletext2 {
  width: 275rpx;
  font-size: 25rpx;
 color: rgba(112,112,112,1);
 
}

.lijilingqu {
  width: 135rpx;
  height: 50rpx;
  background: linear-gradient(0deg, rgba(254, 135, 67, 1), rgba(255, 90, 77, 1));
  border-radius: 4rpx;
  text-align: center;
}

.lijilingqu text {
  width: 84rpx;
  height: 21rpx;
  font-size: 24rpx;
  font-family: SimSun;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 41rpx;
}