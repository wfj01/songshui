/* pages/wode/wode_dianzipiao/index.wxss */


.chongzhi{
  display: block;
  border: 1rpx solid rgb(0, 0, 0);
  width: 200rpx;
  height:80rpx;
  border-radius: 60rpx;
  justify-content: center;
  align-items: center;
  line-height: 80rpx;
  text-align: center;
  color: rgb(0, 0, 0);
}

.one{
  position: relative;
  width: 690rpx;
  height:350rpx ;
}
.one>image{
  position: absolute;
  width: 100%;
  height: 100%;
}
.topview{
  align-items: center;
  position: absolute;
  width: 690rpx;
  display: flex;
  justify-content: space-between;
}

.booy{
  padding: 30rpx;
}

.middletext{
  display: flex;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chtext{
  color: rgb(59, 56, 212);
  font-size:60rpx ;
  font-weight: bold;
  text-shadow: -1rpx 0 #8888, 0 10rpx #8888, 1rpx 0 #8888, 0 -1rpx #8888;
}

.entext{
  color: rgb(59, 56, 212);
  font-size:55rpx ;
}

.amount{
  color: white;
  font-size:110rpx ;
  font-weight: bold;
  text-shadow: -1rpx 0 #8888, 0 1rpx #8888, 5rpx 0 #000, 0 -1rpx #8888;
}

.righttext{
  display: flex;
  justify-content: space-between;
}

.company{
  color: white;
  font-size:40rpx ;
  text-shadow: -1rpx 0 #8888, 0 1rpx #8888, 5rpx 0 #000, 0 -1rpx #8888;
}

.toptext{
  color: #fff;
  font-size: 25rpx;
  display: block;
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  padding: 15rpx;
  padding-right:30rpx;
}

.titletext{
  font-size: 45rpx;
  font-weight: bold;
  color: #000;
  padding: 30rpx;
}

.two{
  display: flex;
  justify-content: start;
  height:80rpx;
  width: 400rpx;
  color: #fff;
}

.name{
  margin: 0;
  padding-left: 30rpx;
  display: block;
  font-size: 40rpx;
  margin-right: 15rpx;
  height:60rpx;
  line-height: 60rpx;
}

.shuoming{
  margin: 0;
  padding: 0;
  display: block;
  font-size: 34rpx;
  height:60rpx;
  line-height: 70rpx;
  color: #000;
}