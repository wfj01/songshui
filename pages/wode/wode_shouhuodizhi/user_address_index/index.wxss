.one {
    width: 690rpx;
    height: 460rpx;
    margin: 0 auto;
    margin-bottom: 30rpx;
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 0 5rpx 5rpx 0 #eee;
    padding: 30rpx;
    box-sizing: border-box;
    position: relative;
}

.box {
    padding: 30rpx;
    box-sizing: border-box;
}

.name {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #666;
    display: flex;
}

.iphone {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #999;
    margin-bottom: 20rpx;
    display: flex;
}

.address {
    line-height: 50rpx;
    font-size: 30rpx;
    color: #999;
    display: flex;
}

.right .shanchu {
    color: #26c68a;
    background: #fff;
}

.add_buttom {
    display: flex;
    justify-content: space-between;
}

.hr {
    width: 100%;
    height: 1rpx;
    background: #eee;
    display: block;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.icon {

    font-size: 36rpx;
    color: #26c68a;
    margin-right: 15rpx;
    display: block;
}

.left .icon {
    font-size: 40rpx;
    color: #26c68a;
    margin-right: 15rpx;
    line-height: 40rpx;
    display: block;
}

.morenzi {
    height: 40rpx;
    line-height: 40rpx;
    color: #666;
    font-size: 32rpx;
    display: block;
}

.left {
    display: flex;
    justify-content: start;
    align-items: center;
}

.right {
    display: flex;
    justify-content: end;
}

.right text {
    display: block;
    width: 150rpx;
    height: 70rpx;
    border-radius: 40rpx;
    text-align: center;
    border: 1rpx solid #26c68a;
    line-height: 70rpx;
    font-size: 30rpx;
    color: #fff;
    margin-left: 30rpx;
    background: #26c68a;

}

.kong{
    height:  80rpx;
}

/* 底部按钮 */

.bottom_menu {
    box-shadow: 5rpx -25rpx 50rpx 5rpx #fff;
    background: #fff;
    height: 100rpx;
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
    justify-content: space-between;



}

.new_work {
    text-align: center;
    display: block;
    width: 260rpx;
    margin: 0 auto;
    padding: 0;
    font-size: 30rpx;
    font-weight: normal;
    font-stretch: normal;
    line-height: 80rpx;
    letter-spacing: 9rpx;
    color: #ffffff;

    height: 80rpx;
    background-color: #26c68a;
    border-radius: 10rpx;
    margin: 0;
    margin-top: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

.butt {
    width: 300rpx;
}

.bottom_left_top {
    color: #333;
    font-size: 30rpx;
    display: block;
    line-height: 80rpx;
    height: 80rpx;
    margin-top: 10rpx;
    margin-left: 100rpx;

}

.bottom_left_top text {
    margin-right: 30rpx;
    color: #666;
}

.bottom_left_bottom {
    display: block;
    color: #666;
    text-align: left;
    font-size: 24rpx;
    line-height: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
}

.bottom_left {
    position: relative;
}

.bottom_left image {
    position: absolute;
    top: -50rpx;
    width: 100rpx;
    height: 160rpx;
}

.tixiananniu {
    width: 690rpx;
    background: #26c68a;
    height: 80rpx;
    margin: 0 auto;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
    margin-top: 40rpx;
}

.xuanzezhege{
    width: 180rpx;
    height: 80rpx;
    position: absolute;
    top: 50rpx;
    right: 0;
    border-radius: 40rpx 0 0 40rpx ;
    background: #26c68a;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 32rpx;
}
