/* pages/wode/wode_wodekehu/index.wxss */
.page {
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.tab-item {
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #666;
}

.swiper {
  height: 1100rpx;
  background-color: #fff;
}

.on {
  color: #26C68a;
  border-bottom: 2rpx solid #26C68a;
}

.list_one {
  padding: 30rpx;
  box-sizing: border-box;
}

.one_left {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;

}

.one_content {
  width: 200rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #666;
}

.one_right {
  width: 200rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: #666;
}

.one_content view {
  font-size: 30rpx;
  color: #999;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}

.one_left image {
  width: 100%;
  height: 100%;
}

.one {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: rgb(255, 255, 255);
  padding: 35rpx 25rpx 25rpx 25rpx;
  height: 200rpx;
  box-shadow: 0rpx 1rpx 5rpx 0rpx #aaa;
  border-radius: 20rpx;
}

.two {
  border-right: 1rpx solid rgba(0, 0, 0, 0.2);
}

.text {
  display: block;
  width: 33%;
}